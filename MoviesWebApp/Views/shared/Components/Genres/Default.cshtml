@model List<Genre> // list genre değerlerini kullanabilmek için import edilen class

<ul class="list-group">

    <a href="/movies/list/" class="list-group-item list-group-item-action @(ViewBag.SelectedGenre==null?"active":"")">Tüm Filmler</a>

    @foreach (var genre in Model)
    {//genresViewComponent 
        <a href="/movies/list/@genre.GenreId" 
            class="list-group-item list-group-item-action @(ViewBag.SelectedGenre==genre.GenreId.ToString()?"active":"")">@genre.name</a>
    }          
</ul>