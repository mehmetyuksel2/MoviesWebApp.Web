<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="/css/style.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    @RenderSection("message", false)
    @await Html.PartialAsync("_navbar") <!-- navbar nesnesini layout dosyasına import ettik -->
    @RenderSection("header",false)<!--eğer header ı karşılayacak içerik var i-->
    
    
    <div class="container mt-3">

        @if (IsSectionDefined("menu")){

        <div class="row">
            <div class="col-md-3">@RenderSection("menu", false)</div><!-- menu nesnesini layout dosyasına şartlı section  import ettik -->
            <div class="col-md-9">@RenderBody()<!-- sayfanın değişken bölümünün şartlı olarak import edildiği bölüm-->  </div>
        </div>
        }else{

            <div class="row">
                <div class="col-md-12">@RenderBody()</div><!-- menu nesnesini layout dosyasına import ettik -->
            </div>
        }

        @* <div class="row">
            <div class="col-md-12">@RenderBody()</div><!-- menu nesnesini layout dosyasına import ettik -->
        </div> *@
@* 
        <div class="row">
            <div class="col-md-3">@await Html.PartialAsync("_menu")</div><!-- menu nesnesini layout dosyasına import ettik -->
            <div class="col-md-9">@RenderBody()<!-- sayfanın değişken bölümünün import edildiği bölüm-->  </div>
        </div> *@
    </div>
          
    </div>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("script", false)

</body>
</html>
